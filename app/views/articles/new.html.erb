<h1> New Article Controler </h1>

<%= form_with url: '/articles', data: { 'turbo': 'false' } do |f|%>
  <div>
  <%= f.text_field :title, placeholder: "title", id: 'a_title' %> <br>
  </div>
  
  <div style="padding:10px 0px 10px 0px">  
  <%= f.text_area :article_text, size: "75x5", placeholder: "article_text", id: 'a_text' %><br>
  </div>
  
  <div>
  <%= f.submit value: 'submit'%>
  </div>
<%end%> 