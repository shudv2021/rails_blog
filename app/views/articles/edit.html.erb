<h1> Edit article </h1>
<% unless @e.nil?%>
  <ul>
    <%@e.each do |error|%>
      <li class = "error"> <%=error%> </li>
    <%end%> 
  </ul>
<%end%>

<%= form_with model: @article, url: article_path(@article), data: { "turbo-method": :patch } do |f|%>
  <div>
  <%= f.text_field :title, placeholder: "title", id: 'a_title' %> <br>
  </div>
  
  <div style="padding:10px 0px 10px 0px">  
  <%= f.text_area :text, size: "75x5", placeholder: "article_text", id: 'a_text' %><br>
  </div>
  
  <div>
  <%= f.submit%>
  </div>
<%end%> 