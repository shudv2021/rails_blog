<h1> Current article</h1>
<p><%=@article.title%> </p>
<p><%=@article.text%> </p>

<%@article.comments.each do |comment|%>
<p> <%= comment.body%><p>
<%end%>

<%=form_with model: [@article, @article.comments.build] do |f|%>
  <div>
  <%= f.text_field :author, placeholder: "your name", id: 'a_title' %> <br>
  </div>
  
  <div style="padding:10px 0px 10px 0px">  
  <%= f.text_area :body, size: "75x5", placeholder: "comment_text", id: 'a_text' %><br>
  </div>
  
  <div>
  <%= f.submit%>
  </div>
<%end%>